{
  "project": {
    "name": "花卉识别AI挑战赛",
    "version": "1.1.0",
    "description": "基于Vision Transformer的100种花卉识别项目 - 优化版"
  },
  "model": {
    "name": "google/vit-base-patch16-224",
    "pretrained_model": "loretyan/vit-base-oxford-flowers-102",
    "num_classes": 100,
    "image_size": 224,
    "patch_size": 16,
    "hidden_size": 768,
    "num_attention_heads": 12,
    "num_hidden_layers": 12,
    "dropout": 0.1,
    "attention_dropout": 0.1,
    "temperature": 1.2,
    "freeze_backbone": false
  },
  "training": {
    "epochs": 10,
    "batch_size": 32,
    "accumulation_steps": 1,
    "learning_rate": 0.0001,
    "weight_decay": 0.01,
    "warmup_steps": 500,
    "max_grad_norm": 1.0,
    "label_smoothing": 0.1,
    "use_amp": true,
    "save_top_k": 3,
    "patience": 15,
    "min_lr": 1e-7,
    "lr_scheduler_patience": 5
  },
  "optimizer": {
    "type": "AdamW",
    "betas": [0.9, 0.999],
    "eps": 1e-08,
    "amsgrad": false
  },
  "scheduler": {
    "type": "cosine_annealing_warm_restarts",
    "T_0": 5,
    "T_mult": 2,
    "eta_min": 1e-7,
    "warmup_type": "linear"
  },
  "data": {
    "train_dir": "./dataset/flowers-100/train_images",
    "test_dir": "./dataset/flowers-100/test_images", 
    "class_mapping": "./dataset/cat_to_name.json",
    "train_split": 0.8,
    "val_split": 0.2,
    "num_workers": 4,
    "pin_memory": true,
    "persistent_workers": true
  },
  "augmentation": {
    "resize": [224, 224],
    "horizontal_flip": 0.3,
    "rotation": 8,
    "color_jitter": {
      "brightness": 0.15,
      "contrast": 0.15, 
      "saturation": 0.15,
      "hue": 0.05
    },
    "random_crop": {
      "scale": [0.90, 1.0],
      "ratio": [0.85, 1.15]
    },
    "normalize": {
      "mean": [0.485, 0.456, 0.406],
      "std": [0.229, 0.224, 0.225]
    },
    "cutmix": {
      "alpha": 1.0,
      "prob": 0.5
    },
    "mixup": {
      "alpha": 0.2,
      "prob": 0.5
    }
  },
  "inference": {
    "batch_size": 64,
    "use_tta": true,
    "tta_steps": 5,
    "confidence_threshold": 0.5,
    "ensemble_weights": [1.0]
  },
  "paths": {
    "model_dir": "./models",
    "results_dir": "./results", 
    "logs_dir": "./logs",
    "checkpoints_dir": "./checkpoints"
  },
  "logging": {
    "level": "INFO",
    "save_logs": true,
    "tensorboard": true,
    "wandb": false
  },
  "reproducibility": {
    "seed": 42,
    "deterministic": true,
    "benchmark": false
  }
}